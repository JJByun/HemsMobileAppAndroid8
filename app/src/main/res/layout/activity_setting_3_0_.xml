<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    tools:context=".Setting_3_0_Activity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="9dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/vppnet_symbol_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="5" />

            <ImageButton
                android:id="@+id/ImgBtn_Home"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#cccccc"
                android:src="@drawable/hems_home_icon"
                tools:src="@drawable/hems_home_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Switch
                android:id="@+id/switchNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="공지사항 push"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Switch
                android:id="@+id/switchWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="경고알림 push"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Switch
                android:id="@+id/switchFail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="장애알림 push"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnInfo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:background="#162249"
                android:drawableLeft="@drawable/hems_info_icon"
                android:gravity="left|center_vertical"
                android:text="앱 정보" />


            <Button
                android:id="@+id/btnHowToUse"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:background="#162249"
                android:drawableLeft="@drawable/hems_how_to_use_icon"
                android:gravity="left|center_vertical"
                android:text="앱 사용방법" />

            <Button
                android:id="@+id/btnLicense"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#162249"
                android:drawableLeft="@drawable/hems_license_icon"
                android:gravity="left|center_vertical"
                android:text="오픈소스 라이센스" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="(주)노츠"
        android:textColor="#444444"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</android.support.constraint.ConstraintLayout>